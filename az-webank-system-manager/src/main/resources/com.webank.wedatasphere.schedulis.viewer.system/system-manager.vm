<script type="text/javascript">
        var contextURL = "${context}";
        var currentTime = ${currentTime};
        var timezone = "${timezone}";
        var errorMessage = null;
        var successMessage = null;
        var langType = "${currentlangType}";
    </script>
    <script type="text/javascript" src="${context}/js/azkaban/i18n-config.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/azkaban/util/common.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/azkaban/util/ajax.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/azkaban/view/executions.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/jquery/jquery.tablesorter.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/azkaban/util/date.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/azkaban/util/job-status.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/raphael.min.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/js/morris.min.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/system/js/system-manager.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/system/js/user-manager.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/system/js/deparment-manager.js?version=1.10.0"></script>
    <script type="text/javascript" src="${context}/system/js/department-group-manager.js?version=1.10.0"></script>
    <script src="${context}/js/select2/select2.js?version=1.10.0"></script>
    <script src="${context}/js/select2/i18n/zh-CN.js?version=1.10.0"></script>
    <link href="${context}/css/select2/select2.css?version=1.10.0" rel="stylesheet" />
    
</head>
<body>

    #set ($current_page=$systemManage)
    #parse ("azkaban/webapp/servlet/velocity/nav.vm")

## Page header.
    #if (${adminPerm})
    <div class="az-page-header">
        <div class="container-full">
            <div class="row">
                <div class="header-title" id="project-page-header">
                    <h1><a href="${context}/system">$systemManagePage</a></h1>
                </div>
            ##        <div class="header-control">
            ##          <div class="header-form pull-right" id="system-options">
            ##            <button id="syncXmlUserBtn" class="btn btn-sm btn-primary">
