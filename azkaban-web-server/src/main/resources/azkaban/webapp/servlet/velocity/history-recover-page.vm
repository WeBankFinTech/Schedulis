<!-- history-recover-page.vm -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Cache-Control" content="no-cache, must-revalidate">
  <meta http-equiv="Expires" content="0">
  #parse("azkaban/webapp/servlet/velocity/style.vm")
  #parse("azkaban/webapp/servlet/velocity/javascript.vm")

  <link rel="stylesheet" type="text/css" href="${context}/css/bootstrap-datetimepicker.css?version=1.10.0" />
  <script type="text/javascript">
    var contextURL = "${context}";
    var currentTime = ${currentTime};
    var timezone = "${timezone}";
    var langType = "${currentlangType}";
    $(document).ready(function () {
      var jobTable = $("#executingJobs");
      jobTable.tablesorter();
    });
  </script>
  <script type="text/javascript" src="${context}/js/moment.min.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/bootstrap-datetimepicker.min.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/i18n-config.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/jquery/jquery.tablesorter.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/util/ajax.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/repeat-collection-page.js?version=1.10.0"></script>
  
</head>
<body>

  #set ($current_page="history-recover")
  #parse ("azkaban/webapp/servlet/velocity/nav.vm")

  #if ($errorMsg)
    #parse ("azkaban/webapp/servlet/velocity/errormsg.vm")
  #else

  ## Page header.

  <div class="az-page-header">
    <div class="container-full">
      <div class="row">
        <div class="header-title">
          <h1><a href="${context}/recover">$reRunHistory</a></h1>
        </div>
        <div class="header-control">
          <form id="search-form" method="get" class="form-inline header-form" role="form">
            <input type="hidden" name="search" value="true">
            <div class="form-group">
              <div class="input-group">
                <input type="text" id="searchtextbox" placeholder=$flowNameInclude value=#if($search_term) "$esc.html(${search_term})" #else "" #end class="form-control input-sm" name="searchterm">
                <span class="input-group-btn">
                  <button class="btn btn-primary btn-sm">$quickSearch</button>
                  <button type="button" class="btn btn-success btn-sm" id="recover-filter-btn">$advancedFilter</button>
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="container-full">

    #parse ("azkaban/webapp/servlet/velocity/alerts.vm")

    <!-- 数据补采执行情况和历史 -->
    <div class="row">
      <div class="col-xs-12">
        <table id="historyRecover" class="table table-striped table-bordered table-hover table-condensed executions-table">
          <thead>
          <tr>
            <th>#</th>
            <th>$flow</th>
            <th>$program</th>
            <th class="user">$user</th>
            <th class="user">$proxyUser</th>
            <th class="date">$compensateStartTime</th>
            <th class="date">$compensateEndTime</th>
            <th class="elapse">$execInterval</th>
            <th class="date">$runningCompensate</th>
            <th class="elapse">$runningFlowId</th>
            <th class="status">$status</th>
            <th class="action">$operate</th>
          </tr>
          </thead>
          <tbody>
            #if (!$historyRecover.isEmpty())
              #foreach ($recover in $historyRecover)
              <tr>
                <td class="tb-name">
                  $velocityCount
                </td>
                <td style="width:350px;word-break:break-all;">
                  <a href="${context}/manager?project=$vmutils.getProjectName(${recover.projectId})&flow=${recover.flowId}">${recover.flowId}</a>
                </td>
                <td style="width:350px;word-break:break-all;">
                  <a href="${context}/manager?project=$vmutils.getProjectName(${recover.projectId})">$vmutils.getProjectName(${recover.projectId})</a>
                </td>
                <td>${recover.submitUser}</td>
                <td>${recover.proxyUsers}</td>
                <td>$utils.formatDate(${recover.recoverStartTime})</td>
                <td>$utils.formatDate(${recover.recoverEndTime})</td>
                <td>${recover.exInterval}</td>
                <td>$utils.formatDate(${recover.updateTime})</td>
                <td class="tb-name execId">
                  #if (${recover.nowExecutionId} == -1)
                    $waitExecute
                  #else
                    <a href="${context}/executor?execid=${recover.nowExecutionId}">${recover.nowExecutionId}</a>
                  #end
                </td>
                <td><div class="status ${recover.recoverStatus}">$utils.formatStatus(${recover.recoverStatus})</div></td>
                <td>
                  #if ( ${recover.recoverStatus} == 'RUNNING' )
                    <button type="button" id="cancelbtn" class="btn btn-danger btn-sm" onclick="killRepeat('${recover.recoverId}')">Kill</button>
                  #end
                </td>
              </tr>
              #end
            #else
            <tr>
              <td class="last" colspan="10">No Data.</td>
            </tr>
            #end

          </tbody>
        </table>
        <ul class="pagination" id="pageSelection">
  #if ($search)
          <li id="previous" onclick="previousClick(${previous.page})" class="first"><a href="${context}/recover?page=${previous.page}&size=${previous.size}&search=true&searchterm=$esc.html(${search_term})"><span class="arrow">&larr;</span>上一页</a></li>
          <li id="page1" #if($page1.selected) class="selected" #end><a href="${context}/recover?page=${page1.page}&size=${page1.size}&search=true&searchterm=$esc.html(${search_term})">${page1.page}</a></li>
          <li id="page2" #if($page2.selected) class="selected" #end><a href="${context}/recover?page=${page2.page}&size=${page2.size}&search=true&searchterm=$esc.html(${search_term})">${page2.page}</a></li>
          <li id="page3" #if($page3.selected) class="selected" #end><a href="${context}/recover?page=${page3.page}&size=${page3.size}&search=true&searchterm=$esc.html(${search_term})">${page3.page}</a></li>
          <li id="page4" #if($page4.selected) class="selected" #end><a href="${context}/recover?page=${page4.page}&size=${page4.size}&search=true&searchterm=$esc.html(${search_term})">${page4.page}</a></li>
          <li id="page5" #if($page5.selected) class="selected" #end><a href="${context}/recover?page=${page5.page}&size=${page5.size}&search=true&searchterm=$esc.html(${search_term})">${page5.page}</a></li>
          <li id="next" onclick="nextClick(${next.page})"><a href="${context}/recover?page=${next.page}&size=${next.size}&search=true&searchterm=$esc.html(${search_term})">下一页<span class="arrow">&rarr;</span></a></li>
  #elseif($advfilter)
          <li id="previous" onclick="previousClick(${previous.page})" class="first"><a href="${context}/recover?page=${previous.page}&size=${previous.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}"><span class="arrow">&larr;</span>上一页</a></li>
          <li id="page1" #if($page1.selected) class="selected" #end><a href="${context}/recover?page=${page1.page}&size=${page1.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}">${page1.page}</a></li>
          <li id="page2" #if($page2.selected) class="selected" #end><a href="${context}/recover?page=${page2.page}&size=${page2.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}">${page2.page}</a></li>
          <li id="page3" #if($page3.selected) class="selected" #end><a href="${context}/recover?page=${page3.page}&size=${page3.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}">${page3.page}</a></li>
          <li id="page4" #if($page4.selected) class="selected" #end><a href="${context}/recover?page=${page4.page}&size=${page4.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}">${page4.page}</a></li>
          <li id="page5" #if($page5.selected) class="selected" #end><a href="${context}/recover?page=${page5.page}&size=${page5.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}">${page5.page}</a></li>
          <li id="next" onclick="nextClick(${next.page})"><a href="${context}/recover?page=${next.page}&size=${next.size}&advfilter=true&projcontain=${projcontain}&flowcontain=${flowcontain}&usercontain=${usercontain}&status=${status}">下一页<span class="arrow">&rarr;</span></a></li>
  #else
          <li id="previous" onclick="previousClick(${previous.page})" class="first"><a href="${context}/recover?page=${previous.page}&size=${previous.size}"><span class="arrow">&larr;</span>上一页</a></li>
          <li id="page1" #if($page1.selected) class="selected" #end><a href="${context}/recover?page=${page1.page}&size=${page1.size}">${page1.page}</a></li>
          <li id="page2" #if($page2.selected) class="selected" #end><a href="${context}/recover?page=${page2.page}&size=${page2.size}">${page2.page}</a></li>
          <li id="page3" #if($page3.selected) class="selected" #end><a href="${context}/recover?page=${page3.page}&size=${page3.size}">${page3.page}</a></li>
          <li id="page4" #if($page4.selected) class="selected" #end><a href="${context}/recover?page=${page4.page}&size=${page4.size}">${page4.page}</a></li>
          <li id="page5" #if($page5.selected) class="selected" #end><a href="${context}/recover?page=${page5.page}&size=${page5.size}">${page5.page}</a></li>
          <li id="next" onclick="nextClick(${next.page})"><a href="${context}/recover?page=${next.page}&size=${next.size}">下一页<span class="arrow">&rarr;</span></a></li>
  #end
        </ul>
      </div><!-- /col-xs-12 -->
    </div><!-- /row -->

  ## Error message message dialog.

    <div class="modal" id="messageDialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header" id="messageTitle">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Error</h4>
          </div>
          <div class="modal-body" id="messageDiv">
            <p id="messageBox"></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal"  onclick="window.location.reload(true);">离开</button>
          </div>
        </div>
      </div>
    </div>

  ## Advanced Filter Modal.

    <div class="modal" id="recover-filter">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">$advancedFilter</h4>
          </div>
          <div class="modal-body">
            <div class="alert alert-danger" id="adv-filter-error-msg">$error_msg</div>
            <fieldset class="form-horizontal">
              <div class="form-group">
                <label for="projcontain" class="col-sm-2 control-label">$program</label>
                <div class="col-sm-10">
                  <input id="projcontain" type="text" placeholder="${programNameIncl}" value="" class="form-control" name="projcontain">
                </div>
              </div>
              <div class="form-group">
                <label for="flowcontain" class="col-sm-2 control-label">$flow</label>
                <div class="col-sm-10">
                  <input id="flowcontain" type="text" placeholder="${flowNameInclude}" value="" class="form-control" name="flowcontain">
                </div>
              </div>
              <div class="form-group" id="usercontain-div">
                <label for="usercontain" class="col-sm-2 control-label">$user</label>
                <div class="col-sm-10">
                  <input id="usercontain" type="text" placeholder="${userNameIncl}" value="" class="form-control" name="usercontain">
                </div>
              </div>
              <div class="form-group">
                <label for="status" class="col-sm-2 control-label">$status</label>
                <div class="col-sm-10">
                  <select id="status" class="form-control">
                    <option value=0>All Status</option>
                    <option value=20>Preparing</option>
                    <option value=30>Running</option>
                    <option value=50>Success</option>
                    <option value=60>Killed</option>
                    <option value=70>Failed</option>
                  </select>
                </div>
              </div>
            </fieldset>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
            <button class="btn btn-success" id="filter-btn">$commit</button>
          </div>
        </div>
      </div>
    </div>


    #parse ("azkaban/webapp/servlet/velocity/invalidsessionmodal.vm")
      #parse ("azkaban/webapp/servlet/velocity/messagedialog.vm")

  </div><!-- /container-full -->
  #end
</body>
<html>
