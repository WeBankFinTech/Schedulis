<!-- projectpage.vm -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Cache-Control" content="no-cache, must-revalidate">
  <meta http-equiv="Expires" content="0">
  #parse ("azkaban/webapp/servlet/velocity/style.vm")
  #parse ("azkaban/webapp/servlet/velocity/javascript.vm")
  #parse ("azkaban/webapp/servlet/velocity/svgflowincludes.vm")

  <script type="text/javascript">
    var contextURL = "${context}";
    var currentTime = ${currentTime};
    var timezone = "${timezone}";
    var errorMessage = null;
    var successMessage = null;

    var projectId = ${project.id};
    var execAccess = ${exec};
    var projectName = "$project.name";

    var loginUser = "${loginUser}";
    var scheduleAccess = ${schedulePerm};
    var langType = "${currentlangType}";

  </script>
  <script type="text/javascript" src="${context}/js/moment.min.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/bootstrap-datetimepicker.min.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/i18n-config.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/flow-execute-dialog.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/project.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/project-modals.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/history-recover.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/cycle-execution.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/flow-schedule-dialog.js?version=1.10.0"></script>
  <script type="text/javascript" src="${context}/js/azkaban/view/schedule-context-menu.js?version=1.10.0"></script>

  <link rel="stylesheet" href="${context}/css/kalendae.css?version=1.10.0" type="text/css">
  <script type='text/javascript' src='${context}/js/kalendae.standalone.js?version=1.10.0'></script>

  <script src="${context}/js/select2/select2.js?version=1.10.0"></script>
  <script src="${context}/js/select2/i18n/zh-CN.js?version=1.10.0"></script>
  <link href="${context}/css/select2/select2.css?version=1.10.0" rel="stylesheet" />
  
  <link rel="stylesheet" type="text/css" href="${context}/css/bootstrap-datetimepicker.css?version=1.10.0"/>
  <link rel="stylesheet" type="text/css" href="${context}/css/jquery-ui.css?version=1.10.0">
  <style type="text/css">
    .input-box {
      position: relative;
    }

    .input-box input {
      display: block;
      border: 1px solid #d7d6d6;
      background: #fff;
      padding: 10px 10px 10px 20px;
      width: 195px;
    }

    .unit {
      position: absolute;
      display: block;
      left: 5px;
      top: 7px;
      z-index: 9;
    }
    .select2-container .select2-selection--single .select2-selection__rendered {
      display: block;
      padding-left: 8px;
      padding-right: 20px;
      overflow: hidden;
      text-overflow: ellipsis;
      word-break: break-all;
      height: 28px;
      white-space: unset;
    }
  </style>
</head>
<body>

  #set ($current_page="all")
  #parse ("azkaban/webapp/servlet/velocity/nav.vm")

  #if ($errorMsg)
    #parse ("azkaban/webapp/servlet/velocity/errormsg.vm")
  #else

  ## Page header.

    #parse ("azkaban/webapp/servlet/velocity/projectpageheader.vm")

  <div class="container-full">

    #parse ("azkaban/webapp/servlet/velocity/alerts.vm")

  ## Page content.

    <div class="row row-offcanvas row-offcanvas-right">
      <div class="col-xs-12 col-sm-9" id="flow-tabs">

        #set ($project_page = "flows")
        #parse ("azkaban/webapp/servlet/velocity/projectnav.vm")

        <div id="flow-tabs">
          #if ($flows)
            #foreach ($flow in $flows)
              <div class="panel panel-default" flow="${flow.id}" project="${project.name}">
                <div class="panel-heading flow-expander" id="${flow.id}">
                  <div class="pull-right">
                    #if(${schedulePerm})
                      <button type="button" class="btn btn-xs btn-success schedule-flow"
                              flowId="${flow.id}">$sch
                      </button>
                    #end
                    #if (${exec})
                      <button type="button" class="btn btn-xs btn-success execute-flow"
                              flowId="${flow.id}">$execFlow
                      </button>

                      <a href="${context}/manager?project=${project.name}&flow=${flow.id}#executions"
                         class="btn btn-info btn-xs">$exechistory</a>
                      <!--
                        <a href="${context}/manager?project=${project.name}&flow=${flow.id}#summary"
                           class="btn btn-info btn-xs">摘要</a>-->
                    #end

                  </div>
                  <span class="glyphicon glyphicon-chevron-down flow-expander-icon"></span>
                  <a href="${context}/manager?project=${project.name}&flow=${flow.id}" style="word-break:break-all;">${flow.id}</a>
                </div>
                <div id="${flow.id}-child" class="panel-collapse panel-list collapse">
                  <ul class="list-group list-group-collapse expanded-flow-job-list"
                      id="${flow.id}-tbody"></ul>
                </div>
              </div>
            #end
          #else
            <div class="callout callout-default">
              <h4>$noFlow</h4>
              <p>$noFlowTips</p>
            </div>
          #end
        </div><!-- /#flow-tabs -->
      </div><!-- /col-xs-8 -->

      <div class="col-xs-6 col-sm-3 sidebar-offcanvas">
        #parse ("azkaban/webapp/servlet/velocity/projectsidebar.vm")
      </div><!-- /col-xs-4 -->
    </div><!-- /row -->

    #parse ("azkaban/webapp/servlet/velocity/projectmodals.vm")
    #parse ("azkaban/webapp/servlet/velocity/invalidsessionmodal.vm")
    #parse ("azkaban/webapp/servlet/velocity/flowexecutionpanel.vm")
    #parse ("azkaban/webapp/servlet/velocity/messagedialog.vm")
    #parse ("azkaban/webapp/servlet/velocity/repeatcollectionpanel.vm")
    #parse ("azkaban/webapp/servlet/velocity/flow-schedule-panel.vm")

  </div><!-- /container -->
  #end
</body>
</html>

