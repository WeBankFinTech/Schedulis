<script type="text/javascript">
      var currentTime = ${currentTime};
      var timezone = "${timezone}";
      var errorMessage = null;
      var successMessage = null;
      var langType = "${currentlangType}";
    </script>
    <script type="text/javascript" src="/js/azkaban/i18n-config.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/azkaban/util/common.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/azkaban/util/ajax.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/jquery/jquery.tablesorter.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/azkaban/util/utils.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/azkaban/util/job-status.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/raphael.min.js?version=1.43.0"></script>
    <script type="text/javascript" src="/js/morris.min.js?version=1.43.0"></script>
    <link href="/homepage/css/home-page.css?version=1.43.0" rel="stylesheet">

  </head>
  <body>



  #set ($current_page=$home)
  #parse ("azkaban/webapp/servlet/velocity/nav.vm")

## Page header.

  <div class="container-full">

  #parse ("azkaban/webapp/servlet/velocity/alerts.vm")

## Page Content

      <div class="row" id=""><!-- /row -->
        <table style="word-break:break-all; word-wrap:break-all;">
          <tr>
            <td width="52%">
              <div class="col-xs-12"><h3><span class="glyphicon glyphicon-signal"></span>$todayFlowWorkingStatus</h3></div>
              <div class="col-xs-12">
                <table class="home-table">
                  <tr>
                    <td rowspan="2">
                      <div class="statistics-ring" id="home-page-pie"></div>
                    </td>
                    <td id="success-td"></td>
                    <td id="running-td"></td>
                    <td id="failed-td"></td>
                    <td id="moyen-time-td"></td>
                  </tr>
                  <tr>
                    <td id="kill-td"></td>
                    <td id="queue-td"></td>
                    <td ></td>
                    <td id="flow-total-td"></td>
                  </tr>
                </table>
              </div><!-- /col-xs-12 -->
            </td>
            <td width="48%">
              <div class="col-xs-12"><h3><span class="glyphicon glyphicon-comment"></span>$realTimeFlowInfo</h3></div>
              <div class="col-xs-12">
                <div class="real-time-info">
                  <ul id="realTimeUl">
                  </ul>
                </div>
              </div><!-- /col-xs-12 -->
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <div class="col-xs-12"><h3 id="todayFlowInfoHeader" class="get-flow-info"><span class="glyphicon glyphicon-list status-icon" ></span><span id="flowInfoTitle">$getTodayFlowWorkingStatus</span></h3></div>
              <div class="col-xs-12" id="today-flow-info-view">
                <div class="today-flow-info">
                  <table id="executingJobs"
                         class="table table-striped table-bordered table-hover table-condensed executions-table">
                    <thead>
                    <tr>
                        <th>$flowName</th>
                        <th>$programName</th>
                        <th>$creator</th>
                        <th>$numberOfTimesExecute</th>
                      <th>$numberOfTask</th>
                      <th>$ready</th>
                      <th>$running</th>
                      <th>$success</th>
                      <th>$failed</th>
                      <th>$cancelled</th>
                    </tr>
                    </thead>
                    <tbody id="today-flow-info-tbody">
                    </tbody>
                  </table>
                </div>
              </div><!-- /col-xs-12 -->
            </td>
          </tr>
        </table>


      </div><!-- /row -->

  </div><!-- /container-full -->
  <script type="text/javascript" src="/js/echarts/echarts.min.js?version=1.43.0"></script>
<script type="text/javascript" src="/homepage/js/home-page.js?version=1.43.0"></script>
  </body>
</html>
